<div class="home-background">
  <div class="content">
    <h2 class="log">管理者ログイン</h2>

    <% if flash[:alert].present? %>
      <div id="error_explanation">
        <ul>
          <li><i class="fa-solid fa-triangle-exclamation"></i><%= flash[:alert] %></li>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: resource, url: session_path(resource_name), local: true, data: { turbo: false }) do |f| %>
      <div class="field">
        <%= f.label :login, '管理者ユーザーネームまたはメールアドレス' %><br />
        <%= f.text_field :login, autofocus: true, autocomplete: "username", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'ログイン状態を保持' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="new-registration-link">
      <%= link_to "パスワードを忘れましたか？", new_admin_password_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
