<div class="home-background">
  <div class="content">
    <h2>Log in</h2>

    <%= form_for(@user, as: @resource_name, url: session_path(@resource_name)) do |f| %>
      <div class="field">
        <%= f.label :login, 'ユーザーネームまたはメールアドレス' %><br />
        <%= f.text_field :login, autofocus: true, autocomplete: "login" %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if @devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'ログイン状態を保持' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links", resource_name: @resource_name, resource: @user, devise_mapping: @devise_mapping %>
  </div>
</div>
