<div class="home-background">
  <div class="content">
    <h2 class="log">パスワードを変更する</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <div class="field">
        <%= f.label :password, "新しいパスワード", class: "form-label" %><br />
        <% if @minimum_password_length %>
          <em class="password-hint">(<%= @minimum_password_length %>文字以上)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワードの確認", class: "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
