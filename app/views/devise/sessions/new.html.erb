<div class="home-background">
  <div class="content">
    <h2 class="log">ログイン</h2>

    <% if flash[:alert].present? %>
      <div id="error_explanation">
        <ul>
          <li><i class="fa-solid fa-triangle-exclamation"></i><%= flash[:alert] %></li>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :login, 'ユーザーネームまたはメールアドレス' %><br />
        <%= f.text_field :login, autofocus: true, autocomplete: "username" %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'ログイン状態を保持' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="new-registration-link">
      <%= link_to 'ゲストログイン', guest_sign_in_path, method: :post, class: 'btn btn-secondary' %>
    </div>

    <div class="new-registration-link">
      <%= link_to "新規登録", new_user_registration_path, class: "btn btn-secondary" %>
    </div>

    <%= render "devise/shared/password_link" %>
  </div>
</div>
