<div class="home-background">
  <div class="content">
    <h2 class="log">新規登録</h2>

    <% if flash[:alert].present? %>
      <div id="error_explanation">
        <ul>
          <li><i class="fa-solid fa-triangle-exclamation"></i><%= flash[:alert] %></li>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: resource, url: registration_path(resource_name), local: true, data: { turbo: false }) do |f| %>
      <div class="field">
        <%= f.label :username, 'ユーザーネーム' %><br />
        <%= f.text_field :username, placeholder: '必須', autofocus: true, autocomplete: "username" %>
      </div>

      <div class="field">
        <%= f.label :email, 'メールアドレス' %><br />
        <%= f.email_field :email, placeholder: '必須', autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %><br />
        <%= f.password_field :password, placeholder: '8文字以上', autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'パスワード（確認）' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="new-registration-link">
      <%= link_to "ログイン", new_user_session_path, class: "btn btn-secondary" %>
    </div>

  </div>
</div>
