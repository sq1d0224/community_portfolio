<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title, class: 'form-control' %> <!-- スタイルクラスを追加 -->
  </div>

  <div>
    <%= form.label :description, '説明文' %>
    <%= form.text_area :description, class: 'form-control' %> <!-- スタイルクラスを追加 -->
  </div>

  <div>
    <%= form.label :image, '画像' %>
    <%= form.file_field :image, class: 'form-control-file' %> <!-- スタイルクラスを追加 -->
  </div>

  <div class="mt-3">
    <%= form.submit '投稿', class: 'btn btn-primary' %> <!-- スタイルクラスを追加 -->
  </div>
<% end %>
